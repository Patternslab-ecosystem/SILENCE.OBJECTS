# Supabase (get from supabase.com/dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=eyJ...YOUR_SERVICE_ROLE_KEY

# Claude AI (get from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-...YOUR_KEY

# Stripe (get from dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_...YOUR_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...YOUR_KEY
STRIPE_WEBHOOK_SECRET=whsec_...YOUR_SECRET

# Vercel (get from vercel.com/account/tokens)
VERCEL_TOKEN=YOUR_VERCEL_TOKEN

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_PORTAL_URL=http://localhost:3001

# Safety module (dev mode)
SAFETY_RATE_DEV_ONLY=1

# n8n (agent orchestration)
N8N_WEBHOOK_URL=https://YOUR_N8N.hetzner.com/webhook
N8N_API_KEY=YOUR_N8N_KEY
